{% extends '::frontendLayout.html.twig' %}

{% block content %}
    <div style="color:red;text-align:center;font-size:11px;font-weight:bold;padding:5px;"></div>
    <form action="{{ path('login_check') }}" method="post">
        <table class="admin_table" align="center" border="0" cellpadding="0" cellspacing="0">
            <tbody>
                
                <tr>
                    <td colspan="2" align="center"><b>Administrator Login Only</b></td>
                </tr>
                    
                <tr>
                    {% if error %}
                        <div>{{ error.message }}</div>
                    {% endif %}
                </tr>

                <tr>
                    <td>
                        <label>E-mail</label>
                    </td>
                    <td>
                        <input type="text" id="username" name="_username" class="admin_input" value="{{ last_username }}" />
                    </td>
                </tr>
                
                <tr>
                    <td>
                        <label>Password</label>
                    </td>
                    <td>                        
                        <input type="password" id="password" class="admin_input" name="_password"/>
                    </td>
                </tr>
                
                <tr>
                    <td colspan="2" align="center">                                                
                        <button type="submit" class="btn">login</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
    <div>
        <a href="">Forgot password? Click here</a>
    </div>
{% endblock %}